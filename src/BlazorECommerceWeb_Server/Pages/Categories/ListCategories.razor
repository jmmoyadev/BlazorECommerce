@page "/categories"

@using BlazorECommerceWeb_Application.Modules.Categories.Queries

@inject IJSRuntime _jsRuntime
@inject IMediator _mediator

<_DeleteConfirmation></_DeleteConfirmation>

<div class="row mt-4">
    <div class="col-6">
        <h3 class="text-primary mb-3 ml-3">Category List</h3>
    </div>
</div>

@if (IsLoading == true)
{
    <div class="spinner"></div>
}
else
{
    <div class="row mt-4">
        <div class="col-6 offset-6 text-end">
            <a href="categories/create" class="btn btn-primary">Add New Category</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th width="100">Actions</th>
                    <th width="100">Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @if (CategoriesList.Any())
                {
                    @foreach (var cat in CategoriesList)
                    {
                        <tr>
                            <td>
                                <NavLink href="@($"category/edit/{cat.Id}")" class="btn btn-primary btn-sm"><span class="oi oi-pencil" aria-hidden="true"></span> </NavLink>
                                <button class="btn btn-danger btn-sm" @onclick="()=>HandleDelete(cat.Id)"><span class="oi oi-trash" aria-hidden="true"></span></button>
                            </td>
                            <td>@cat.Id</td>
                            <td>@cat.Name</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="3">No data found</td></tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private IEnumerable<CategoryDto> CategoriesList { get; set; } = null!;

    private bool IsLoading { get; set; }

    private int DeleteCategoryId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;

        var result = await _mediator.Send(new GetCategoriesList.Request());

        CategoriesList = result.Categories;

        await Task.Delay(1000);

        IsLoading = false;
    }

    private void HandleDelete(int id)
    {
        DeleteCategoryId = id;
        _jsRuntime.InvokeVoidAsync("ShowDeleteConfirmationModal");
    }

}
